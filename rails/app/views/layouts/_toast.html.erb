<% unless notice.nil? %>
  <div class="toast align-items-center border-0" role="alert" data-autohide="true" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
      <div class="toast-body">
        <%= notice %>
      </div>
      <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
  </div>
<% end %>